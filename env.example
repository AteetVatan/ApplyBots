# ApplyBots Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME=ApplyBots
APP_ENV=development
DEBUG=true

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ApplyBots

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Together AI (LLM Provider)
# =============================================================================
# Get your API key from: https://api.together.xyz/
TOGETHER_API_KEY=your-together-ai-api-key
TOGETHER_API_BASE=https://api.together.xyz/v1

# =============================================================================
# Stripe (Payment Gateway)
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PREMIUM=price_premium_monthly_id
STRIPE_PRICE_ID_ELITE=price_elite_monthly_id

# =============================================================================
# S3/MinIO (File Storage)
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=applybots
S3_REGION=us-east-1

# =============================================================================
# ChromaDB (Vector Store)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# Job Aggregator APIs
# =============================================================================
# Adzuna - Get keys from: https://developer.adzuna.com/
ADZUNA_APP_ID=your-adzuna-app-id
ADZUNA_API_KEY=your-adzuna-api-key

# Jooble - Get key from: https://jooble.org/api/about
JOOBLE_API_KEY=your-jooble-api-key

# The Muse - Get key from: https://www.themuse.com/developers
THEMUSE_API_KEY=your-themuse-api-key

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# Plan Limits
# =============================================================================
DAILY_APPLY_LIMIT_FREE=5
DAILY_APPLY_LIMIT_PREMIUM=20
DAILY_APPLY_LIMIT_ELITE=50

# =============================================================================
# Frontend
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8080
