# Reactive Resume Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Configuration (Required)
# =============================================================================
# Public URL where your application will be accessible
# Example: http://localhost:3002 (development) or https://rxresu.me (production)
APP_URL=http://localhost:3002

# =============================================================================
# Printer Configuration (Required)
# =============================================================================
# WebSocket endpoint for PDF generation service (Browserless)
# Required for PDF export functionality
# Format: ws://host:port?token=YOUR_TOKEN or wss://host:port?token=YOUR_TOKEN
PRINTER_ENDPOINT=ws://localhost:4000?token=1234567890

# =============================================================================
# Printer Configuration (Optional)
# =============================================================================
# Public URL for the printer service to access the application
# Only needed when running the app outside Docker while printer is in Docker
# Use host.docker.internal to allow Docker containers to reach your host machine
# If not set, defaults to APP_URL
# Example: http://host.docker.internal:3002
PRINTER_APP_URL=http://host.docker.internal:3002

# =============================================================================
# Backend API Integration (Optional)
# =============================================================================
# FastAPI backend API URL
# The application communicates with the FastAPI backend for all data operations
# Default: http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8080

# Parent window origin for iframe communication
# Used when the resume builder is embedded in an iframe
# Default: http://localhost:3000
NEXT_PUBLIC_IFRAME_PARENT_ORIGIN=http://localhost:3000

# =============================================================================
# Timezone (Optional)
# =============================================================================
# Timezone for the application (defaults to Etc/UTC if not set)
TZ=Etc/UTC

# =============================================================================
# Feature Flags (Optional)
# =============================================================================
# Enable debug mode for printer route (useful for troubleshooting PDF generation)
FLAG_DEBUG_PRINTER=false

